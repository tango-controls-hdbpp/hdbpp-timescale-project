cmake_minimum_required(VERSION 2.8.2)

project(libhdbpp-download NONE)
include(ExternalProject)

message(STATUS "External project: libhdbpp")
message(STATUS "External project address: https://github.com/tango-controls-hdbpp/libhdbpp.git")

ExternalProject_Add(libhdbpp
    GIT_REPOSITORY "https://github.com/tango-controls-hdbpp/libhdbpp.git" 
    GIT_TAG ${LIBHDBPP_VERSION}
    SOURCE_DIR "${CMAKE_SOURCE_DIR}/${EXTERNAL_PROJECT_DIR}/libhdbpp"
    BINARY_DIR "${CMAKE_BINARY_DIR}/libhdbpp"
    CONFIGURE_COMMAND ""
    BUILD_COMMAND ""
    INSTALL_COMMAND ""
    TEST_COMMAND ""
    PATCH_COMMAND ""
)