cmake_minimum_required(VERSION 2.8.2)

project(hdbpp-cm-download NONE)
include(ExternalProject)

message(STATUS "External project: hdbpp-cm")
message(STATUS "External project address: https://github.com/tango-controls-hdbpp/hdbpp-cm.git")

ExternalProject_Add(hdbpp_es
    GIT_REPOSITORY "https://github.com/tango-controls-hdbpp/hdbpp-cm.git" 
    GIT_TAG ${HDBPP_CM_VERSION}
    SOURCE_DIR "${CMAKE_SOURCE_DIR}/${EXTERNAL_PROJECT_DIR}/hdbpp-cm"
    BINARY_DIR "${CMAKE_BINARY_DIR}/hdbpp-cm"
    CONFIGURE_COMMAND ""
    BUILD_COMMAND ""
    INSTALL_COMMAND ""
    TEST_COMMAND ""
    PATCH_COMMAND ""
)